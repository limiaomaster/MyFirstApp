<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/nice_blue">
    <!-- 首字母 -->
    <TextView
        android:id="@+id/tv_firstLetter"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:text="B"
        android:textSize="10sp"
        android:paddingLeft="30dp"
        android:textColor="@color/white"
        android:background="@color/nice_black"
        />
    <!--行间距-->
    <TextView
        android:id="@+id/tv_marginTop"
        android:layout_width="fill_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/tv_firstLetter"
        android:background="@color/midnightblue"/>
    <!-- 联系人头像 -->
    <QuickContactBadge
        android:id="@+id/qcb_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_marginTop"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/touxiang" />

    <!--名字-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周杰伦"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"

        android:layout_below="@+id/tv_marginTop"
        android:layout_toRightOf="@+id/qcb_img"
        android:layout_toEndOf="@+id/qcb_img" />

    <!--电话号码-->
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15538864750"
        android:textSize="15sp"

        android:textColor="@color/white"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name" />


</RelativeLayout>